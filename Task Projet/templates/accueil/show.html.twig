{% extends 'base.html.twig' %}

{% block title %}
	{{controller_name}}
{% endblock %}

{% block body %}
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<div class="container">
			<a class="navbar-brand" href="{{ path('app_home') }}">Task Note
			</a>
			<span class="text-light mt-1">
				{% if app.user %}
					{{ app.user.email }}
				{% endif %}
			</span>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav ml-auto">
					<li class="nav-item active">
						<a class="nav-link" href="{{ path('app_home') }}">Accueils
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{path('app_logout')}}">Déconnexion</a>
					</li>

				</ul>

			</div>
		</div>
	</nav>
	<div class="row my-5">
		<div class="col-md-8 mx-auto">
			<div
				class="card text-left">
				{# <img class="card-img-top" src="holder.js/100px180/" alt=""> #}
				<div class="card-header">
					<h3 class="card-title text-center">{{ task.title }}</h3>
				</div>
				<div class="card-body">
					<p class="card-text">{{ task.description }}</p>
				</div>
				<div class="card-footer">
					<h6 class="text-center">{{task.CreatedAt | date("d/m/Y") }}
						à
						{{task.createdAt | date("H:i")}}
					</h6>
				<h6 class="text-center">{{ task.author.email }}</h6>
				</div>
			</div>

		</div>
	</div>
{% endblock %}
