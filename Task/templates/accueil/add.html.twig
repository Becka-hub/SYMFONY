{% extends 'base.html.twig' %}

{% block title %}
	{{ controller_name }}
{% endblock %}

{% block body %}
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<div class="container">
			<a class="navbar-brand" href="{{ path('app_home') }}">Task Note
			</a>
			<span class="text-light mt-1">
				{% if app.user %}
					{{ app.user.email }}
				{% endif %}
			</span>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav ml-auto">
					<li class="nav-item active">
						<a class="nav-link" href="{{ path('app_home') }}">Accueils
						</a>
					</li>
					<li class="nav-item ml-5">
						<a class="nav-link" href="{{path('app_logout')}}">DÃ©connexion</a>
					</li>

				</ul>

			</div>
		</div>
	</nav>

	<div class="row my-5">

		<div class="col-md-8 mx-auto">
			{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{ message }}
				</div>
			{% endfor %}
			<div
				class="card text-left">
				{# <img class="card-img-top" src="holder.js/100px180/" alt=""> #}
				<div class="card-header">
					<h3 class="card-title">Ajouter Task</h3>
				</div>
				<div class="card-body">
					{{ form_start(form) }}
					<div class="form-group">
						{{ form_label(form.title) }}
						{{ form_widget(form.title,{'attr':{'class':'form-control form-control-sm','placeholder':'Titre ...'}}) }}
					</div>
					<div class="form-group">
						{{ form_label(form.description) }}
						{{ form_widget(form.description,{'attr':{'class':'form-control form-control-sm','placeholder':'Description ...'}}) }}
					</div>
					<div class="form-group">
						{{ form_widget(form.Ajouter,{'attr':{'class':'btn btn-sm btn-success'}}) }}
					</div>
					{{ form_end(form) }}
				</div>
			</div>

		</div>
	</div>
{% endblock %}
