{% extends 'base.html.twig' %}

{% block title %}
	{{ controller_name }}
{% endblock %}

{% block body %}
	<h1 class="text-center">Bienvenue dans mon Panier</h1>
	{% if items | length > 0 %}
		<table class="table">
			<thead>
				<tr>
					<th>Produit</th>
					<th>Prix</th>
					<th>Quantite</th>
					<th>Total</th>
					<th>Suprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for item in items %}
					<tr>
						<td>{{item.produit.title}}</td>
						<td>{{item.produit.price}}Ar</td>
						<td>{{item.quantity}}</td>
						<td>{{item.produit.price * item.quantity}}Ar</td>
						<td>
							<a href="{{ path('cart_remove',{'id':item.produit.id}) }}" class="btn btn-sm btn-danger">Suprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
			<tfoot>
            <td colspan="3" class="text-right">Total :</td>
            <td>{{ total }}Ar</td>
            <td></td>
            </tfoot>
		</table>
        
	{% else %}
		<p>
			Suprise, c'est vide
		</p>
	{% endif %}


{% endblock %}
