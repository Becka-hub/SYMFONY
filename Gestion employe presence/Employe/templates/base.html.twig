<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>

		{% block stylesheets %}{% endblock %}
		<link rel="stylesheet" type="text/css" href="{{asset('libs/bootstrap-4.3.1/css/bootstrap.css')}}"> 
		</head>
		<body>
			<nav class="navbar navbar-expand-lg navbar-dark bg-info">
				<div class="container">
					<a class="navbar-brand" href="#">Gestions Employees</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					{% if app.user %}
						<div class="collapse navbar-collapse" id="navbarSupportedContent">
							<ul class="navbar-nav ml-auto">
								<li class="nav-item active">
									<a class="nav-link" href="{{ path('home') }}">Accueils
									</a>
								</li>
								<li class="nav-item active">
									<a class="nav-link" href="{{ path('presence') }}">
										Présences
									</a>
								</li>
								<li class="nav-item active">
									<a class="nav-link" href="{{ path('employe') }}">
										Employés
									</a>
								</li>
								<li class="nav-item active ml-3">
									<a class="nav-link btn-danger btn-sm rounded-lg mt-1" href="{{ path('app_logout') }}">
										Logout</a>
								</li>
					</ul>
				</div>
			{% else %}

				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav ml-auto">
						<li class="nav-item active">
							<a class="nav-link" href="{{ path('app_login') }}">Login
							</a>
						</li>
						<li class="nav-item active">
							<a class="nav-link" href="{{ path('app_register') }}">Registration
							</a>
						</li>
					</ul>
				</div>
			{% endif %}
		</body>
	</html>
</div></body></html></nav>
{% block body %}
{% endblock %}
<script type="text/javascript " src="{{asset('libs/jquery/jquery-3.3.1.slim.min.js')}}"></script>
<script type="text/javascript " src="{{asset('libs/jquery/popper.min.js')}}"></script>
<script type="text/javascript " src="{{asset('libs/bootstrap-4.3.1/js/bootstrap.min.js ')}}"></script>
<script src="{{asset('libs/jquery/jquery-3.4.1.min.js')}}"></script>
<script src="{{asset('libs/jquery/jquery-3.2.1.js')}}"></script>
<script src="{{asset('libs/jquery/jquery.min.js')}}"></script>
<script src="{{asset('libs/jquery/sweetalert2.all.min.js')}}"></script>
{% block javascripts %}{% endblock %}
</body></html>
