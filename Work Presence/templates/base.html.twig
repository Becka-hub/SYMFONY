<!DOCTYPE html>
<html lang="{{app.request.locale}}">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
        <title>{% block title %}Work Presence{% endblock %}</title>
		<link rel="icon" href="{{asset('image/logo.png')}}" width="100%">
		<link rel="stylesheet" type="text/css" href="{{asset('libs/bootstrap-4.3.1/css/bootstrap.css')}}"> 
	    {% block stylesheets %}{% endblock %}
		</head>
		<body>
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
				<div class="container">
					
					{% if app.user %}
				      <a class="navbar-brand" href="{{ path('home') }}"><img src="{{asset('image/logo.png')}}" class="mr-2" width="40px">Work Presence</a>
					{% else %}
				        <a class="navbar-brand" href="#"><img src="{{asset('image/logo.png')}}" class="mr-2" width="40px" >Work Presence</a>
				     {% endif %}
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					{% if app.user %}
						<div class="collapse navbar-collapse" id="navbarSupportedContent">
							<ul class="navbar-nav ml-auto">
								<li class="nav-item active">
									<a class="nav-link" href="{{ path('home') }}">Home
									</a>
								</li>
								<li class="nav-item active">
									<a class="nav-link" href="{{ path('presence') }}">
										Presence
									</a>
								</li>
								<li class="nav-item active">
									<a class="nav-link" href="{{ path('employe') }}">
										Employee
									</a>
								</li>
								<li class="nav-item active ml-3">
									<a class="nav-link btn-danger btn-sm rounded-lg mt-1" href="{{ path('app_logout') }}">
										Logout</a>
								</li>
					</ul>
				</div>
			{% else %}

				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav ml-auto">
						<li class="nav-item active">
							<a class="nav-link" href="{{ path('app_login') }}">Sign In
							</a>
						</li>
						<li class="nav-item active">
							<a class="nav-link" href="{{ path('app_register') }}">Sign up
							</a>
						</li>
					</ul>
				</div>
			{% endif %}
		</body>
	</html>
</div></body></html></nav>
{% block body %}
{% endblock %}
<script type="text/javascript " src="{{asset('libs/jquery/jquery-3.3.1.slim.min.js')}}"></script>
<script type="text/javascript " src="{{asset('libs/jquery/popper.min.js')}}"></script>
<script type="text/javascript " src="{{asset('libs/bootstrap-4.3.1/js/bootstrap.min.js ')}}"></script>
<script src="{{asset('libs/jquery/jquery-3.4.1.min.js')}}"></script>
<script src="{{asset('libs/jquery/jquery-3.2.1.js')}}"></script>
<script src="{{asset('libs/jquery/jquery.min.js')}}"></script>
<script src="{{asset('libs/jquery/sweetalert2.all.min.js')}}"></script>
{% block javascripts %}{% endblock %}
</body></html>
